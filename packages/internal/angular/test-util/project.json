{
  "name": "internal-angular-test-util",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/internal/angular/test-util/src",
  "prefix": "ngworker",
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/internal/angular/test-util/jest.config.ts",
        "passWithNoTests": true,
        "reporters": ["default", "github-actions"]
      },
      "configurations": {
        "coverage": {
          "codeCoverage": true,
          "ci": true,
          "coverageReporters": ["lcovonly", "text-summary"]
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/internal/angular/test-util/**/*.ts",
          "packages/internal/angular/test-util/**/*.html"
        ]
      },
      "configurations": {
        "report": {
          "format": "json",
          "force": true,
          "outputFile": "reports/packages/internal/angular/test-util/lint/report.json"
        }
      }
    }
  },
  "tags": ["scope:internal", "type:test-util"]
}
